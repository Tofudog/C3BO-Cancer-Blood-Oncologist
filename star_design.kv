<Chatbot>:

    FloatLayout:
    
        canvas:
            Color:
                rgba: 216/255., 195/255., 21/255., 1
            Rectangle:
                pos: self.pos
                size: self.size     
        
        
        Image:
            # Strangely enough, source should be .png
            source: "C-3BO_project/c3bo_temp_logo.png"
            size: self.texture_size
            pos: (20, 630)
        
        # grand title
        Label:
            text: "[u][i]Cancer-3 Blood Oncologist[/i][/u]"
            markup: True
            font_size: 60
            pos: (570, 660)
        
        Label:
            text: "[b]General Info[/b]"
            markup: True
            size_hint_y: 1
            color: (216/255., 195/255., 21/255., 1)
            outline_width: 2
            font_size: 30
            pos: (60, 475)
        
        # bulleted info
