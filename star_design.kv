            size: (60, 135)
            color: "black"
            pos: (145, 400)

        Button:
            id: proj_info
            text: "Full Open-Source\nProject + Code"
            size: (200, 60)
            color: "white"
            background_color: "#F24B82"
            pos: (25, 165)
            on_release: root.leukemia_info
        
        Label:
            text: "[i]“We Seem To Be Made To Suffer. It’s Our Lot In Life.”[/i] -C-3PO"
            markup: True
            font_size: 16
            color: "black"
            pos: (185, 10)
        
        Image:
            source: "C-3BO_project/C3BO.png"
            size: (self.width + 120, self.height + 120)
            pos: (510, 50)

        
        ############ FIX! color: #FF6B7C
