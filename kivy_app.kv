<Chatbot>:

    GridLayout:
    
        canvas:
            Color:
                rgba: 216 / 255., 195 / 255., 88 / 255., 1
            Rectangle:
                pos: self.pos
                size: self.size
 
        rows: 2
        cols: 3
        
        Label:
            text: ""
            
        Label:
            text: "Greetings Patient"
            size_hint_y: .4
            
        Label:
            text: ""

        Image:
            source: "C-3BO_project/C3BO.jpg"
            size: self.texture_size
        
        Label:
            markup: True
            text: "General Info"
            color: 0, 0, 0, 1
            outline_color: 0, 0.5, 0.5, 1
            font_size: 30
            
        Button:
            id: btnExit
            text: "Exit"
            # background_normal: ---
            # background_down: ---
            on_press: root.leaveApp()
        
            
    ### Page 2
    GridLayout:
    
        canvas:
            Color:
                rgba: 143 / 255., 112 / 205., 88 / 255., 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        rows: 2
        cols: 2
        
        Image:
            source: "C-3BO_project/R2D2_img.jpg"
            size_hint: (.5, .25)
            #pos: (125, 300)
        
        # Peripheral Blood Smear Image
        Image:
            id: input_image
            source: "Blood-Cancer_Data/ALL_IDB1/im/Im001_1.jpg"
            size_hint: (.5, .25)
            #pos: (235, 415)
            
        Label:
            id: clinCls
            text: "Clinical Classification"
            
            
        Button:
            id: btnImage
            text: "PBS Leuk. Input"
            # background_normal: ---
            # background_down: ---
            on_press: root.recordImg()
            
        TextInput:
            id: fileId
            
        Label:
            text: ""
            
        
        
            
            
            
            
            
            
            
            
            

    
    
   
            
            
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
                
                
    
